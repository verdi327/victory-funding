<% form_route = action_name == "edit" ? admin_client_path(@client) : admin_clients_path %>
<% submit_text = action_name == "edit" ? "Update Client" : "Create Client" %>
<%= form_for(@client, :url => form_route) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row control-group">
    <div class="form-group col-xs-12 floating-label-form-group controls">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>
  </div>

  <div class="row control-group">
    <div class="form-group col-xs-12 floating-label-form-group controls">
      <%= f.label :donorbox_link %><br>
      <%= f.text_area :donorbox_link, class: "form-control", placeholder: "DonorBox Link", size: "30x10" %>
    </div>
  </div>

  <div class="row" style="margin-top:15px">
    <%= f.submit submit_text, class:  "btn btn-outline-dark" %>
  </div>
<% end %>
